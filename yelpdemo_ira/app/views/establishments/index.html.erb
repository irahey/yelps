<p id="notice"><%= notice %></p>

<h1>Listing Establishments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Street address</th>
      <th>City</th>
      <th>Province</th>
      <th>Postal code</th>
      <th>Phone</th>
      <th>Website</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @establishments.each do |establishment| %>
      <tr>
        <td><%= establishment.name %></td>
        <td><%= establishment.street_address %></td>
        <td><%= establishment.city %></td>
        <td><%= establishment.province %></td>
        <td><%= establishment.postal_code %></td>
        <td><%= establishment.phone %></td>
        <td><%= establishment.website %></td>
        <td><%= establishment.image %></td>
        <td><%= link_to 'Show', establishment %></td>
        <td><%= link_to 'Edit', edit_establishment_path(establishment) %></td>
        <td><%= link_to 'Destroy', establishment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

